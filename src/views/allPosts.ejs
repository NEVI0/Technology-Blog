<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="">
	<meta name="author" content="">

	<title>Technology Blog - Todos os Posts</title>

	<!-- Bootstrap core CSS -->
	<link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

	<!-- Custom fonts for this template -->
	<link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
	<link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

	<!-- Custom styles for this template -->
	<link href="css/clean-blog.min.css" rel="stylesheet">
	<link href="style.css" rel="stylesheet">
</head>
<body>

	<!-- Navigation -->
	<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
		<div class="container">
			<a class="navbar-brand" href="#">
				Technology Blog - Todos os Posts
			</a>

			<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
			Menu
				<i class="fas fa-bars"></i>
			</button>

			<div class="collapse navbar-collapse" id="navbarResponsive">
				<ul class="navbar-nav ml-auto">
					<li class="nav-item">
						<a class="nav-link" href="/">Home</a>
					</li>

					<% if (user) { %>
						<li class="nav-item">
							<a class="nav-link" href="/account">Minha Conta</a>
						</li>
					<% } else { %>
						<li class="nav-item">
							<a class="nav-link" href="#" data-toggle="modal" data-target="#SiginModal">Entrar</a>
						</li>
					<% } %>
				</ul>
			</div>
		</div>
	</nav>

	<!-- Page Header -->
	<header class="masthead" style="background-image: url('img/home-bg.jpg')">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<div class="site-heading">
					</div>
				</div>
			</div>
		</div>
	</header>

	<!-- Main Container -->
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-md-10 mx-auto">
				<% if (posts.length == 0) { %>

					<h4 class="no-posts">Nenhum Post Encontrado</h4>

				<% } else { %>

					<% for (var index = 0; index < posts.length; index++) { %>
						<div class="post-preview">
							<a href="/detail?id=<%= posts[index].id_post %>">
								<h4><%= posts[index].title %></h4>
								<h5 class="post-subtitle"><%= posts[index].description %></h5>
							</a>

							<p class="post-meta">
								<b>Por</b> <%= posts[index].ower %> - 
								<span class="badge badge-info"><%= posts[index].category %></span>
							</p>
						</div>
						<hr>
					<% } %>

				<% } %>
			</div>
		</div>
	</div>

	<br><br>

	<!-- Signin Modal -->
	<div class="modal fade" id="SiginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<form method="post" action="/signin">
					<div class="modal-header">
				        <h5 class="modal-title">Iniciar Sess√£o</h5>
				    </div>

				    <div class="modal-body">				        
				    	<div class="form-group">
						    <label for="email">E-mail</label> <br>
						    <input type="email" name="email" id="email" placeholder="Digite seu E-mail">
					  	</div>

					  	<div class="form-group">
						    <label for="password">Senha</label> <br>
						    <input type="password" name="password" id="password" placeholder="Digite a sua Senha">
					  	</div>

					  	<% if (error) { %>
					  		<div class="error-box">
					  			<strong><%= error %></strong>
					  		</div>
					  	<% } %>
			      	</div>

			      	<div class="modal-footer">
			      		<a href="/signup-page" class="btn btn-secondary btn-sm">Cadastrar</a>
			      		<input type="submit" value="Entrar" class="btn btn-info btn-sm">
			      	</div>
			    </form>
			</div>
		</div>
	</div>

	<!-- Bootstrap core JavaScript -->
	<script src="vendor/jquery/jquery.min.js"></script>
	<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

	<!-- Custom scripts for this template -->
	<script src="js/clean-blog.min.js"></script>

</body>
</html>